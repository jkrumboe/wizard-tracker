# Backend Environment Variables

# MongoDB Connection (production)
MONGO_URI=mongodb://localhost:27017/wizard-tracker

# Development Database (copy of production data for testing features)
# Same MongoDB instance, different database name
MONGO_URI_DEV=mongodb://localhost:27017/wizard-tracker-dev

# Backup Database (for storing backups)
MONGO_URI_BACKUP=mongodb://localhost:27017/wizard-tracker-backup

# Production MongoDB (for copying data from prod to dev)
# MONGO_URI_PROD=mongodb://100.95.118.43:27017/wizard-tracker

# JWT Secret (generate a secure random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development
