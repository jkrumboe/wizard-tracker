# ==============================================
# Wizard Tracker Environment Configuration
# ==============================================
# Copy this file to .env and run: npm run setup-env

# Frontend Configuration
# App version for build information
VITE_APP_VERSION=1.2.0
VITE_BUILD_DATE=

# Backend Configuration
# ==============================================

# MongoDB Connection
# For local development: mongodb://localhost:27017/wizard-tracker
# For Docker: mongodb://mongodb:27017/wizard-tracker
MONGO_URI=mongodb://mongodb:27017/wizard-tracker

# JWT Secret - DO NOT COMMIT REAL VALUES TO GIT
# Generate new secret on each deployment for security
# Use: npm run setup-env
JWT_SECRET=CHANGE_ME_ON_DEPLOYMENT

# Server Configuration
NODE_ENV=development
PORT=5000

# Upload Service Settings
# ==============================================
UPLOAD_CONCURRENCY=5
REPLACE_EXISTING_GAMES=false

# Docker MongoDB Admin Interface
# ==============================================
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=admin123
